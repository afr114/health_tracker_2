<%= simple_form_for [current_user, @goal, @exercise] do |f| %>
  <%= f.input :name, :input_html => { :class => "form-control" } %>
  <%= f.input :calories, :input_html => { :class => "form-control" } %>
  <br>
  <div class="text-center">
    <%= f.button :submit, :value => "Add Exercise", :class => "btn-lg btn-default" %>
  </div>
<% end %>
